<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dawidcisowski.Przelicznik_Walut">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:launchMode="standard"
        android:noHistory="false"
        android:uiOptions="splitActionBarWhenNarrow"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.dawidcisowski.Przelicznik_Walut.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.dawidcisowski.Przelicznik_Walut.ListViewActivity"

            android:label="@string/choseCurrency"/>
        <activity
            android:name="com.dawidcisowski.Przelicznik_Walut.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name="com.dawidcisowski.Przelicznik_Walut.AboutActivity"
            android:label="@string/title_activity_about"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.dawidcisowski.Przelicznik_Walut.ListViewAllCurrency"
            android:label="@string/allCurrency"    />
    </application>

</manifest>

